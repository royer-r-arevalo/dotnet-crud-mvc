@model IEnumerable<PlayerViewModel>

@{
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Current Team</th>
            <th>Golden Boots</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var player in Model)
        {
            <tr>
                <td>@player.Name</td>
                <td>@player.CurrentTeam</td>
                <td>@player.GoldenBoots</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@player.Id">Edit</a>
                    <a asp-action="Details" asp-route-id="@player.Id">Details</a>
                    <a asp-action="Delete" asp-route-id="@player.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
