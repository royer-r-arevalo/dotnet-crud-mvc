@model PlayerViewModel
@{
}

<h1>Create Player</h1>

<form asp-action="Create">
    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="CurrentTeam" class="form-label"></label>
        <input asp-for="CurrentTeam" class="form-control" />
        <span asp-validation-for="CurrentTeam" class="text-danger"></span>
    </div>  
    <div class="mb-3">
        <label asp-for="GoldenBoots" class="form-label"></label>
        <input asp-for="GoldenBoots" class="form-control" />
        <span asp-validation-for="GoldenBoots" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>
